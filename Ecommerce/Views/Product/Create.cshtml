  <!-- PAGE -->
@model Ecommerce.Models.Product

@{
	ViewData["Title"] = "Create";
}
<div class="page">
	<div class="page-main">

		<div class="main-content app-content mt-0">
			<div class="side-app">

				<!-- CONTAINER -->
				<div class="main-container container-fluid">

					<!-- PAGE-HEADER -->
					<div class="page-header">
						<h1 class="page-title">Add Product</h1>
						<div>
							<ol class="breadcrumb">
								<li class="breadcrumb-item"><a href="javascript:void(0)">Pages</a></li>
								<li class="breadcrumb-item active" aria-current="page">Add Product</li>
							</ol>
						</div>
					</div>
					<!-- PAGE-HEADER END -->
					<!-- ROW-1 OPEN -->
					<div class="row">
						<div class="col-lg-12">
							<div class="card">
								<div class="card-header">
									<div class="card-title">Add New Product</div>
								</div>
								<form asp-action="Create" enctype="multipart/form-data">
									<div asp-validation-summary="All" class="text-danger"></div>
									<div class="card-body">
										<div class="row mb-4">
											<label class="col-md-3 form-label">Product Name :</label>
											<div class="col-md-9">
												<input asp-for="Name" class="form-control" />
												<span asp-validation-for="Name" class="text-danger"></span>

											</div>
										</div>
										<div class="row mb-4">
											<label class="col-md-3 form-label">Price :</label>
											<div class="col-md-9">
												<input asp-for="Price" class="form-control" />
												<span asp-validation-for="Price" class="text-danger"></span>
											</div>
										</div>
										<div class="row mb-4">
											<label class="col-md-3 form-label">Categories :</label>
											<div class="col-md-9">
												<select class="form-control form-select select2"
														data-bs-placeholder="Select Category" asp-for="CategoryId"
														asp-items="@ViewBag.CatSL">
												</select>
											</div>
										</div>

										<!-- Row -->
										<div class="row">
											<label class="col-md-3 form-label mb-4">Product Description :</label>
											<div class="col-md-9 mb-4">
												<input asp-for="Description" class="form-control" />
												<span asp-validation-for="Description" class="text-danger"></span>
											</div>
										</div>
										<!--End Row-->
										<!--Row-->
										<div class="row">
											<label class="col-md-3 form-label mb-4">Image Upload :</label>
											<div class="col-md-9">
												@* <input id="demo" type="file" name="files" accept=".jpg, .png, image/jpeg, image/png" multiple> *@
												<input asp-for="Image" type="file" class="form-control" />
												<span asp-validation-for="Image" class="text-danger"></span>
												<label asp-for="SellerId" hidden class="control-label"></label>
												<input asp-for="SellerId" hidden class="form-control" value="@ViewBag.SellerId"></input>
											</div>
										</div>
										<!--End Row-->
									</div>
									<div class="card-footer">
										<!--Row-->
										<div class="row">
											<div class="col-md-3"></div>
											<div class="col-md-9">
												<input type="submit" class="btn btn-primary" value="Add Product" />
												<a asp-action="Index" class="btn btn-default float-end">Discard</a>
								</form>

							</div>
						</div>
						<!--End Row-->
					</div>
				</div>
			</div>
		</div>
		<!-- /ROW-1 CLOSED -->
	</div>
	<!-- CONTAINER CLOSED -->
</div>

