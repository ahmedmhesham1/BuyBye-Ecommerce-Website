@model Ecommerce.DTO.ResetPassDTO
@{
	Layout = "_Layout";
}
@{
	ViewData["Title"] = "Index";
}
<div class="container">

<!--app-content open-->
<!-- PAGE-HEADER -->
<div class="page-header">
	<h1 class="page-title">Change Password</h1>
</div>
<!-- PAGE-HEADER END -->
<!-- Row -->
<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Change Password</h3>

			</div>
            <div class="card-body">
                    <form asp-action="ChangePassword" asp-controller="User" method="post" class="form-horizontal">
                       <div asp-validation-summary="All" class="text-danger"></div>
                    <input hidden type="text" name="Id" value="@ViewBag.Id" />
                        <div class=" row mb-2">
                            <label for="inputName" class="col-md-2 form-label">Recent Password:</label>
                            <div class="col-md-10">
                                <input asp-for="RecentPassword" class="form-control" id="inputName">
                            <span asp-validation-for="RecentPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class=" row mb-2">
                            <label for="inputName" class="col-md-2 form-label">New Password:</label>
                            <div class="col-md-10">
                            <input asp-for="Password" class="form-control" id="inputName" placeholder="New Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                    <div class=" row mb-2">
                        <label for="inputName" class="col-md-2 form-label">Re-Enter Password:</label>
                        <div class="col-md-10">
                            <input asp-for="ConfirmPassword" class="form-control" id="inputName" placeholder="Confirm Password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                   
                    <div style="display:flex;justify-content: flex-end;">
                        <div class="btn-list mt-4">
                            <a asp-action="Details" asp-controller="User" asp-route-id="@ViewBag.Id" class="btn ripple btn-danger"> Cancel </a>
                            <input type="submit" value="Save" class="btn ripple btn-success me-2" />
                        </div>
                    </div>
		    </form>
		</div>
	</div>
</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}