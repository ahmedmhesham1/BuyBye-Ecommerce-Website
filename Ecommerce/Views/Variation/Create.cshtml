@model Ecommerce.Models.Variation

@{
    ViewData["Title"] = "Create";
}

@{
    Layout = "_AdminLayout";
}

<div style="display:flex; justify-content:center; align-items:center; align-content:center;">
    <div class="row" style="width:90%;">
        <div class="col-xl-5 col-lg-12 col-md-12">
            <h1 class="mt-4"><b> Variations </b></h1>
        </div>
        @* <div class="details col-xl-7 col-lg-12 col-md-12 mt-4 mt-xl-0" style="display: flex; align-items: center; justify-content: flex-end;">
        <a asp-action="Index" class="btn btn-primary btn-block float-end my-2"><i class="fa fa-bars me-2"></i>Back To List</a>
        </div> *@
    </div>
</div>

<div style="display:flex; justify-content:center; align-items:center; align-content:center;">
    <div class="container" style="width:90%;">
        <div class="card">
            <div class="card-body">
                <form action="Create" method="post" class="form-horizontal">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input name="CategoryId" type="text" class="form-control" value="@ViewBag.Category.Id" hidden />
                    
                    <div class=" row mb-2">
                        <label for="inputName" class="col-md-2 form-label">Variations: </label>
                        <div class="col-md-10">
                            @if (@ViewBag.Category.Variations == null)
                            {
                                <span class="badge rounded-pill bg-danger badge-sm me-1 mb-1 mt-1" style="font-size: 1rem; margin-right:5px;">No Variations</span>
                            }
                            else
                            {
                                @foreach (var v in @ViewBag.Category.Variations)
                                {

                                    <span style="margin-right:10px;">
                                        <p class="badge rounded-pill bg-primary badge-sm me-1 mb-1 mt-1" style="font-size: 1rem; margin-right:1px;">@v.Name</p>
                                        <a href="~/VariationOption/Create/@v.Id" class="badge rounded-pill bg-warning badge-sm me-1 mb-1 mt-1" style="font-size: 1rem; margin-right:1px;" data-bs-placement="top" data-bs-toggle="tooltip" title="Edit Variation"><i class="fa fa-pencil"></i></a>

                                        <a href="/Variation/Delete/@v.Id" class="badge rounded-pill bg-danger badge-sm me-1 mb-1 mt-1" style="font-size: 1rem; margin-right:10px;" data-bs-placement="top" data-bs-toggle="tooltip" title="Delete Variation"><i class="fe fe-trash-2"></i></a>
                                    </span>
                                }
                            }
                        </div>
                    </div>
                    
                        <div class=" row mb-2">
                            <label for="inputName" class="col-md-2 form-label">Add Variation: </label>
                            <div class="col-md-10">
                                <input asp-for="Name" class="form-control" id="inputName" placeholder="Name" >
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>


                    
                    <div style="display:flex;justify-content: flex-end;">
                        <div class="btn-list mt-4">
                            <a asp-action="Edit" asp-route-id="@ViewBag.Category.Id" asp-controller="Category" class="btn ripple btn-danger"> Back </a>
                            
                                <input type="submit" value="Create" class="btn ripple btn-success me-2" />

                            
                            
                        </div>
                    </div>
                    @* <div class="mb-0 mt-4 row justify-content-end">
                    <div class="col-md-9">
                    <button class="btn btn-primary">Sign in</button>
                    <button class="btn btn-secondary">Cancel</button>
                    </div>
                    </div> *@
                </form>
                <div class="col-sm-6 col-lg-3  mt-2 mb-2">
                </div>

            </div>
        </div>
    </div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}