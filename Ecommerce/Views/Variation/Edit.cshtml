@model Ecommerce.Models.Variation

@{
    ViewData["Title"] = "Edit";
}


@{
    Layout = "_AdminLayout";
}




<div style="display:flex; justify-content:center; align-items:center; align-content:center;">
    <div class="row" style="width:90%;">
        <div class="col-xl-5 col-lg-12 col-md-12">
            <h1 class="mt-4"><b>Edit Variation</b></h1>
        </div>
        @* <div class="details col-xl-7 col-lg-12 col-md-12 mt-4 mt-xl-0" style="display: flex; align-items: center; justify-content: flex-end;">
            <a asp-action="Index" class="btn btn-primary btn-block float-end my-2"><i class="fa fa-bars me-2"></i>Back To List</a>
        </div> *@
    </div>
</div>

<div style="display:flex; justify-content:center; align-items:center; align-content:center;">
    <div class="container" style="width:90%;">
            <div class="card">
                <div class="card-body">
                <form action="Edit" method="post" class="form-horizontal">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Id" type="text" class="form-control" value="@Model.Id" hidden/>
                    <div class=" row mb-2">
                        <label for="inputName" class="col-md-2 form-label">Variation Name</label>
                        <div class="col-md-10">
                            <input asp-for="Name" class="form-control" id="inputName" placeholder="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div style="display:flex;justify-content: flex-end;">
                        <div class="btn-list mt-4">
                            <a asp-action="Create" asp-controller="VariationOption" asp-route-id="@Model.Id" asp-controller="Category" class="btn ripple btn-danger"> Back </a>
                            <input type="submit" value="Save" class="btn ripple btn-success me-2" />
                        </div>
                    </div>
                </form>
                <div class="col-sm-6 col-lg-3  mt-2 mb-2">
                </div>
                        
                </div>
            </div>
        </div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}